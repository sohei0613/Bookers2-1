<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <h2>User info</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <th>name</th>
                        <th></th>
                    </tr>
                    <th>introduction</th>
                    <th></th>
                </tbody>
            </table>
            <div class="row">
            <!--<i class="fas fa-user-cog"></i>-->
            <%#= link_to edit_user_path(user) do %>
            <%# end %>
            </div>
            <h2 class="mt-3">New book</h2>
            <%= form_with model: @book do |f| %>
            <div class="form-group">
                <label for="book_title">Title</label><br>
                <%= f.text_field :title %>
            </div>
            <div class="form-group">
                <label for="book_opinion">Opinion</label><br>
                <%= f.text_area :body %>
            </div>
            <%= f.submit '投稿' %>
            <% end %>
            </div>
            <div class="col-md-8 offset-md-1">
                <h2>Books</h2>
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Opinion</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @books.each do |book| %>
                        <tr>
                            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
                            <td><%= book.title %></td>
                            <td><%= book.body %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
